{
  "name": "your-app-name",
  "private": true,
  "version": "1.0.0",
  "license": "Apache 2.0",
  "scripts": {
    "start": "node index.js",
    "dev": "gatsby develop -H 0.0.0.0",
    "dev:clean": "yarn clean && yarn dev",
    "build": "gatsby build",
    "build:prefix": "gatsby clean && gatsby build --prefix-paths",
    "build:clean": "yarn clean && gatsby build --prefix-paths",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:styles": "stylelint \"src/**/*.scss\" --fix",
    "format": "prettier --write \"**/*.{js,css,scss,json,html,yaml,mdx}\"",
    "serve": "gatsby serve",
    "clean": "gatsby clean"
  },
  "eslintIgnore": [
    "public/",
    ".cache/"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{js,css,scss,json,html,yaml,mdx}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "express": "^4.17.1",
    "gatsby": "^2.24.76",
    "gatsby-theme-carbon": "^1.29.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.18.0"
  }
}
